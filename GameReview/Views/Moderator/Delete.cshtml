@model GameReview.Models.Review

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Review</h4>
    <hr />
    <div class="panel panel-warning">
        <div class="panel-heading">
            <h3 class="panel-title">@Html.DisplayFor(modelModel => Model.UserName)</h3>
            <h3 class="panel-title text-right">@Html.DisplayFor(modelModel => Model.DateCreated)</h3>
        </div>
        <div class="panel-body">
            @Html.DisplayFor(modelModel => Model.Content)
        </div>
        <div class="panel-footer">
            Was this review Helpful?
            <button type="button" class="btn btn-default">
                <span class="glyphicon glyphicon-thumbs-up"></span>@Model.HelpfulCount
            </button>
            <button type="button" class="btn btn-default">
                <span class="glyphicon glyphicon-thumbs-up"></span>@Model.NotHelpfulCount
            </button>
        </div>
    </div>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
