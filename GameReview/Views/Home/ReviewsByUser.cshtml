@model GameReview.Models.ApplicationUser

@{
    ViewBag.Title = "My Reviews";
}

<h2>My Reviews</h2>
<hr />
<div class="row">
    <div class="col-md-10 col-md-offset-1">

        @foreach (var item in Model.Reviews)
        {
            <div class="col-md-4">
            @if (item.Recommended)
            {
            <div class="panel panel-success">
                <div class="panel-heading">
                    <h3 class="panel-title">@Html.DisplayFor(modelItem => item.UserName)</h3>
                    <h3 class="panel-title text-right">@Html.DisplayFor(modelItem => item.DateCreated)</h3>
                </div>
                <div class="panel-body">
                    @Html.DisplayFor(modelItem => item.Content)
                </div>

            </div>
            }
            else
            {
            <div class="panel panel-danger">
                <div class="panel-heading">
                    <h3 class="panel-title">@Html.DisplayFor(modelItem => item.UserName)</h3>
                    <h3 class="panel-title text-right">@Html.DisplayFor(modelItem => item.DateCreated)</h3>
                </div>
                <div class="panel-body">
                    @Html.DisplayFor(modelItem => item.Content)
                </div>
            </div>
            }
        </div>
        }

    </div>
</div>